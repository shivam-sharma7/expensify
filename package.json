    "connect-mongodb-session": "^5.0.0",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "graphql": "^16.8.1",
    "graphql-passport": "^0.6.8",
    "mongoose": "^8.4.4",
